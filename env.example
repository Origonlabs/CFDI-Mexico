# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# PAC (Proveedor Autorizado de Certificaci√≥n)
FACTURALOPLUS_USER=your_pac_username
FACTURALOPLUS_API_KEY=your_pac_api_key

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000
ALLOW_MISSING_REFERER=true
CSP_ADDITIONAL_SCRIPT_SRC=
CSP_ADDITIONAL_CONNECT_SRC=
CSP_ADDITIONAL_FRAME_SRC=

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Logging (Optional)
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
